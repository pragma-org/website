---
import Pattern from './Pattern.astro';

interface Props {
  actives?: Set<number>;
  rows: number;
}

let { actives, rows } = Astro.props;

const nCol = 7;
const nRow = rows;

if (!actives) {
  actives = new Set(
    [...Array(32).keys()]
      .map((i) => {
        return Math.random() < 0.25 ? i : null;
      })
      .filter((x) => x !== null),
  );
}
---

<div id="grid">
  <Pattern actives={actives} nCol={nCol} nRow={nRow} />
</div>

<style define:vars={{ nCol, nRow }}>
  #grid {
    display: grid;
    grid-template-columns: repeat(var(--nCol), 1fr);
    color: var(--color-secondary);

    & :global(svg) {
      width: 100vw;
      height: calc(var(--nRow) * 100vw / var(--nCol));
      aspect-ratio: 1/1;
    }
  }
</style>
